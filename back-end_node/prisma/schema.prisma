generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int       @id @default(autoincrement())
  name         String
  cpf          String    @unique
  email        String    @unique
  password     String
  gender       String
  birthdate    String
  phone        String
  photo        String?
  number_house Int?
  city_id      String?
  state_id     String?
  country_id   String?
  zip_code     Int?
  street       String?
  district     String?
  status       Boolean
  role         String
  created_at   DateTime  @default(now())
  updated_at   DateTime? @default(now())
  deleted_at   DateTime?

  City   City?   @relation(fields: [city_id], references: [id])
  State  State?  @relation(fields: [state_id], references: [id])
  County County? @relation(fields: [country_id], references: [id])

  @@map("user")
}

// REGIÃ•ES
model City {
  id         String    @id @default(uuid())
  nome       String
  codigo     String
  Uf         String
  created_at DateTime? @default(now())
  updated_at DateTime? @default(now())
  User       User[]

  @@map("city")
}

model State {
  id         String    @id @default(uuid())
  name       String
  ufCode     String
  Uf         String
  created_at DateTime? @default(now())
  updated_at DateTime? @default(now())
  User       User[]

  @@map("state")
}

model County {
  id         String    @id @default(uuid())
  name       String
  created_at DateTime? @default(now())
  updated_at DateTime? @default(now())
  User       User[]

  @@map("country")
}
